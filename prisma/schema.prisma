generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  @@map("users")

  id  Int @id @default(autoincrement())
  username String @db.VarChar(255)
  discord_id String @db.VarChar(64) @unique
  entries SketchbookEntry[]

  @@index(username)
}

model Sketchbook {
  @@map("sketchbooks")

  id Int @id @default(autoincrement())
  name String @db.VarChar(255) @unique
  theme String?
  start DateTime @db.Timestamp(3)
  end DateTime @db.Timestamp(3)
  pages Int
  width Int
  height Int
  entries SketchbookEntry[]

  @@index(name)
}

enum EntryKind {
  @@map("entry_kind")

  DigitalArt
  TraditionalArt
  Photo
  Animation
  Video
}

model SketchbookEntry {
  @@map("sketchbook_entries")

  id Int @id @default(autoincrement())
  user_id Int 
  user User @relation(fields: [user_id], references: [id])
  sketchbook_id Int
  sketchbook Sketchbook @relation(fields: [sketchbook_id], references: [id])
  kind EntryKind
  path String @unique
  name String? @db.VarChar(255)
  description String?
  post_time DateTime @db.Timestamp(3)
  edit_time DateTime @db.Timestamp(3)

  @@index(user_id)
  @@index(sketchbook_id)
  @@index([user_id, sketchbook_id])
}